{
  "compilerOptions": {
    "target": "ES2020",                // Reasonable modern target
    "module": "NodeNext",              // Matches Node.js ESM resolution
    "moduleResolution": "NodeNext",    // Ensures imports resolve correctly
    "rootDir": "./src",                // Input folder
    "outDir": "./dist",                // Output folder
    "esModuleInterop": true,           // Allows default imports from CommonJS
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
